mixin header(headerMod, currentPage)
  -
    const headerLinks = [
      {href: "index.html", text: "Главная"},
      {href: "portfolio.html", text: "Портфолио"},
      {href: "reviews.html", text: "Видеоотзывы"},
    ]

  header(class=(headerMod) ? "header header--" + headerMod : "header")
    .container
      .header__inner
        .header__main
          .header__logo
            a(href="#")
              +icon('logo', 42, 47)
              .header__logo-text
                b Землестрой
                span Сервис

          p.header__desc Устройство рулонных газонов «под ключ»

        nav.main-nav
          button.main-nav__toggle.btn-reset.burger(type="button" aria-label="Переключатель отображения меню" aria-pressed="false")
          .main-nav__wrapper.js-mobile-menu
            ul.main-nav__list
              each link, index in headerLinks
                li
                  a.main-nav__link(
                    class={'main-nav__link--active': currentPage === link.text},
                    href=link.href)
                      =link.text

            .main-nav__contacts
              a(href="tel:+79827051347").main-nav__tel
                +icon('phone', 16, 16)
                | +7 (982) 705-13-47


